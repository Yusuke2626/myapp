<!DOCTYPE html>
<html>
  <head>
    <title>空き家.com</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag('favicon.ico') %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css"/>
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>

    <script type="text/javascript"></script>
    <script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
    <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
    <script type="text/javascript"></script>
  </head>

  <body>
  <div class="base_contents">
    <div class="header">
      <h1><img src='http://illustrain.com/img/work/2016/illustrain09-jyuutaku6.png' class="logo"><%=link_to '空き家.com',houses_path,class:'get' %></h1>
      <ul class="header_menu_plus">
        <% if user_signed_in? %>
        <li class="header_menu_li_plus"><%=link_to '空き家を探す',houses_path,class:'post' %></li>
        <li class="header_menu_li_plus"><%=link_to 'お気に入りを見る',"/users/#{current_user.id}/favorites",class:'post' %></li>
        <li class="header_menu_li_plus"><%=link_to 'エリアから探す','/prefectures',class:'post' %></li>

        <% else %>
        <li class="header_menu_li_plus"><%=link_to '空き家の一覧',houses_path,class:'post' %></li>
        <li class="header_menu_li_plus"><%=link_to 'ログイン',new_user_session_path,class:'post' %></li>
        <li class="header_menu_li_plus"><%=link_to 'エリアから探す','/prefectures',class:'post' %></li>
        <% end %>
      </ul>

      <ul class="header_menu">
        <% if user_signed_in? %>
        <li class="header_menu_li"><%=link_to '空き家の一覧',houses_path,class:'post' %></li>
        <li class="header_menu_li"><%=link_to 'お気に入り',"/users/#{current_user.id}/favorites",class:'post' %></li>
        <li class="header_menu_li"><%=link_to 'エリア一覧',prefectures_path,class:'post' %></li>
        <% else %>
        <li class="header_menu_li"><%=link_to '空き家の一覧',houses_path,class:'post' %></li>
        <li class="header_menu_li"><%=link_to 'ログイン',new_user_session_path,class:'post' %></li>
        <li class="header_menu_li"><%=link_to 'エリア一覧',prefectures_path,class:'post' %></li>
        <% end %>
      </ul>
      <ul class="app_ul">
        <% if user_signed_in? %>
        <li class="app_li"><a href="/users/<%=current_user.id %>">マイページ</a></li>
        <li class="app_li"><%=link_to 'ログアウト',destroy_user_session_path,method: :delete,class:'post' %></li>
        <% else %>
        <li class="app_li"><%=link_to '新規登録',new_user_registration_path,class:'post' %></li>
        <li class="app_li"><%=link_to 'ログイン',new_user_session_path,method: :post,class:'post' %></li>
        <li></li>
        <% end %>
      </ul>
      <% if user_signed_in? %>
      <ul class="new_post_header_menu">
        <p><%= link_to '空き家を投稿してみよう',new_house_path, class:'post_pul' %> </p>
        <li><%= link_to '空き家を投稿する',new_house_path, class:'' %> </li>
      </ul>
      <%else%>
      <ul class="new_post_header_menu">
        <p><%= link_to '空き家を投稿してみよう',new_user_session_path, class:'post_pul' %> </p>
        <li><%= link_to '空き家を投稿する',new_user_session_path, class:'' %> </li>
      </ul>
      <% end %>

    </div>
    <div class="bottom_contents">
        <%= yield %>

    </div>



  </div>
  <div class= "footer">
  </div>
  </body>
</html>
