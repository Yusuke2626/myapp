<% form_for @house do |f| %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name ,:placeholder => "名前" %>
  </div>
  <div class="field">
     <%= f.label :price %><br>
     <%= f.number_field :price ,:placeholder => "価格"  %>
  </div>
  <div class="actions">
    <%= f.submit "登録する" %>
  </div>
<% end %>

